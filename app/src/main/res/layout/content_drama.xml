<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.adika.fuckingnetflix.Drama"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:background="@drawable/netflixbackground"
    tools:showIn="@layout/activity_drama">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GuyFix"
        android:layout_marginTop="40dp"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#FF0000"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drama series:"
        android:layout_marginTop="40dp"
        android:textSize="30dp"
        android:textStyle="italic"
        android:textColor="#FF0000"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="134dp"
                android:layout_height="101dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_weight="4"
                app:srcCompat="@drawable/s2" />
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="134dp"
                android:layout_height="101dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_weight="4"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/bb" />
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="134dp"
                android:layout_height="101dp"
                android:layout_row="1"
                android:layout_marginTop="40dp"
                android:layout_column="0"
                android:layout_weight="4"
                app:srcCompat="@drawable/s4" />
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="134dp"
                android:layout_height="101dp"
                android:layout_row="1"
                android:layout_marginTop="40dp"
                android:layout_column="0"
                android:layout_weight="4"
                app:srcCompat="@drawable/ss" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>